/* pages/components/parts/parts.wxss */
page {
  background-color: #F8F8F8;
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
}

.part-align {
  display:flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: flex-start;
  align-content: flex-start;
  padding-left: 0rpx;
  padding-right: 0rpx;
}

.part-view {
  display: flex;
  flex-direction: column;
  flex-basis: 33%;
  align-items: center;
  margin-left: 2rpx;
  margin-right: 2rpx;
  background-color: #F0F0F0;
}

.part-subTitle {
  font-size: 24rpx;
  color:#666666;
}